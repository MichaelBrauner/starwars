<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">

    {%~ block title -%}
        <title>{{ 'Starwars' }} ðŸŒŸ -</title>
    {%- endblock ~%}

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ 'Starwars' }}">

    {% block meta %} {% endblock %}

    {% block favicon -%}
        <link rel="manifest" href="{{ asset('build/favicon/site.webmanifest') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('build/favicon/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('build/favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('build/favicon/favicon-16x16.png') }}">
        <link rel="mask-icon" href="{{ asset('build/favicon/safari-pinned-tab.svg') }}" color="#2E3440">
        <link rel="shortcut icon" href="{{ asset('build/favicon/favicon.ico') }}">
        <meta name="msapplication-TileColor" content="#2e3440">
        <meta name="msapplication-config" content="{{ asset('build/favicon/browserconfig.xml') }}">
        <meta name="theme-color" content="#2e3440">
    {%- endblock %}


    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

</head>

<body>
{% block body %}
    <div class="container">
        <h1 class="text-center">
            <span class="highlight">{{ 'Starwars' }}</span>
        </h1>

        <div class="film-search">
            {% set search_query = app.request.get('query', '') %}
            <form method="get"
                  action="{{ path('app_starwars_list') }}"
                  id="search-form"
                  data-controller="autosubmit"
                  data-turbo-frame="film-list"
            >
                <label>
                    <input type="search"
                           name="search"
                           placeholder="{{ 'Search films' }}"
                           data-action="input->autosubmit#debouncedSubmit"
                           value="{{ search_query }}"
                    >
                </label>
            </form>

        </div>

        <turbo-frame id="film-list" src="{{ path('app_starwars_list') }}" loading="lazy"></turbo-frame>
    </div>
{% endblock %}
</body>
</html>
